.iot-order_main .iot-order_item {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
    color: #666;
  }
  .iot-order_main .iot-order_item .iot-order_no_row {
    display: flex;
    padding: 10rpx 0;
    justify-content: space-between;
  }
  .iot-order_main .iot-order_item .iot-order_price_row {
    display: flex;
    padding: 10rpx 0;
    justify-content: space-between;
  }
  .iot-order_main .iot-order_item .iot-order_price_row .iot-order_price_value {
    color: var(--themeColor);
    font-size: 32rpx;
  }
  .iot-order_main .iot-order_item .iot-order_time_row {
    display: flex;
    padding: 10rpx 0;
    justify-content: space-between;
  }
  