  .iot-fb_main {
    padding: 20rpx;
    color: #666;
  }
  .iot-fb_main .iot-fb_tips {
    display: flex;
    flex-wrap: wrap;
  }
  .iot-fb_main .iot-fb_tips text {
    width: 30%;
    padding: 10rpx;
    text-align: center;
    background-color: #fff;
    margin: 20rpx 10rpx;
  }
  .iot-fb_main .iot-fb_content {
    background-color: #fff;
    margin-top: 20rpx;
  }
  .iot-fb_main .iot-fb_content textarea {
    padding: 10rpx;
  }
  .iot-fb_main .iot-fb_tool {
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 30rpx;
  }
  .iot-fb_main .iot-fb_tool button {
    margin: 0;
    width: 90rpx;
    height: 90rpx;
    font-size: 60rpx;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    margin-top: 20rpx;
    color: #ccc;
  }
  .iot-fb_main .iot-fb_tool .iot-up_img_item {
    margin-left: 20rpx;
    margin-top: 20rpx;
  }
  .iot-fb_main .iot-form_btn_wrap {
    margin-top: 20rpx;
    display: flex;
    justify-content: flex-end;
  }
  .iot-fb_main .iot-form_btn_wrap button {
    margin: 0;
    width: 30%;
  }
  