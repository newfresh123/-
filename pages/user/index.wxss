/* pages/user/index.wxss */page {
  background-color: #edece8;
}
.iot-user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.iot-user_info_wrap .iot-user_img_wrap {
  position: relative;
}
.iot-user_info_wrap .iot-user_img_wrap .iot-user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.iot-user_info_wrap .iot-user_img_wrap .iot-user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.iot-user_info_wrap .iot-user_img_wrap .iot-user_info .iot-user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.iot-user_info_wrap .iot-user_img_wrap .iot-user_info .iot-user_name {
  color: #fff;
  margin-top: 40rpx;
}
.iot-user_info_wrap .iot-user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.iot-user_content {
  position: relative;
}
.iot-user_content .iot-user_main {
  padding-bottom: 100rpx;
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.iot-user_content .iot-user_main .iot-history_wrap {
  background-color: #fff;
  display: flex;
}
.iot-user_content .iot-user_main .iot-history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.iot-user_content .iot-user_main .iot-history_wrap navigator .iot-his_num {
  color: var(--themeColor);
}
.iot-user_content .iot-user_main .iot-orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.iot-user_content .iot-user_main .iot-orders_wrap .iot-orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.iot-user_content .iot-user_main .iot-orders_wrap .iot-order_content {
  display: flex;
}
.iot-user_content .iot-user_main .iot-orders_wrap .iot-order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.iot-user_content .iot-user_main .iot-orders_wrap .iot-order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.iot-user_content .iot-user_main .iot-address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
.iot-user_content .iot-user_main .iot-app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.iot-user_content .iot-user_main .iot-app_info_wrap .iot-app_info_item {
  padding: 20rpx ;
  border-bottom: 1rpx solid #ccc;
}
.iot-user_content .iot-user_main .iot-app_info_wrap .iot-app_info_contact {
  display: flex;
  justify-content: space-between;
}
.iot-user_content .iot-user_main .iot-recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
